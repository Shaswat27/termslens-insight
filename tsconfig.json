// tsconfig.json (Root)
{
  "files": [],
  "references": [{ "path": "./tsconfig.app.json" }],
  "compilerOptions": {
    "target": "ES2020", // Or higher if needed
    "module": "NodeNext", // *** Change module to NodeNext ***
    "moduleResolution": "NodeNext", // *** Change moduleResolution to NodeNext ***
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
      // "@/api/*": ["./api/*"]
    },
    "noImplicitAny": false,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "allowJs": true,
    "noUnusedLocals": false,
    "strictNullChecks": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true // Good practice with esModuleInterop
  },
  "include": [
    "src/**/*",
    "api/**/*",
    "testExtract.ts" // Ensure the test script is included
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}